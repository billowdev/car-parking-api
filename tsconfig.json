{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"baseUrl": ".",
	"paths": {
		"@/*": [
			"./src/*"
		]
	}
}